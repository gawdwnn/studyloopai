# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit sensitive values to version control

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development database URL
DATABASE_URL=

# Production database URL (only required in production)
PROD_DATABASE_URL=

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase project URL (get from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=

# Supabase anonymous key (safe to expose in client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
# Your application URL
NEXT_PUBLIC_SITE_URL=

# =============================================================================
# AI SERVICES (OPTIONAL)
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=

# xAI API key for Grok models
XAI_API_KEY=

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Upstash Redis URL for caching
UPSTASH_REDIS_REST_URL=

# Upstash Redis token
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# ENVIRONMENT-SPECIFIC NOTES
# =============================================================================
# Development: Use .env.local
# Production: Use .env.production.local
# Test: Use .env.test.local
#
# Required in all environments:
# - NODE_ENV
# - DATABASE_URL
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - NEXT_PUBLIC_SITE_URL
#
# Optional but recommended:
# - OPENAI_API_KEY
# - XAI_API_KEY
# - UPSTASH_REDIS_REST_URL
# - UPSTASH_REDIS_REST_TOKEN
